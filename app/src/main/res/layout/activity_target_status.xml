                    android:layout_height="wrap_content"
                    android:text="יעד מוגדר"
                    android:background="#a0d2ec"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:layout_weight="0.3" />

                <Button
                    android:id="@+id/saveButton2"
